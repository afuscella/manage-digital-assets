<mvc:View
	controllerName="digitalassets.assets.controller.Object"
	xmlns="sap.m"
  xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar"
	height="100%">

	<semantic:SemanticPage
		id="page"
		headerPinnable="true"
		toggleHeaderOnTitleClick="true"
		preserveHeaderStateOnScroll="false"

		busyIndicatorDelay="{objectView>/delay}">

		<semantic:titleHeading>
			<Title
				text="{Description}"
				level="H2"/>
		</semantic:titleHeading>

		<semantic:titleSnappedContent>
			<Text text="{AssetName}"/>
		</semantic:titleSnappedContent>

		<semantic:titleExpandedContent>
			<Text text="(ID: {AssetID}) {AssetName}"/>
		</semantic:titleExpandedContent>

		<semantic:headerContent>
			<l:HorizontalLayout allowWrapping="true">
				<l:VerticalLayout class="sapUiLargeMarginEnd">
					<ObjectAttribute 
            title="Asset Name" 
            text="{AssetName}" 
            class="sapUiTinyMarginBottom" 
          />
					<ObjectAttribute 
            title="Asset Type" 
            text="{ToAssetType/Description}"
          />
				</l:VerticalLayout>

				<l:VerticalLayout>
					<ObjectAttribute 
            title="Content Manager" 
            text="{ToContentManager/Name}" 
            class="sapUiTinyMarginBottom"
          />
					<ObjectStatus 
            title="Ready Date" 
            text="{
				      path : 'ReadyDate',
				      type : 'sap.ui.model.type.Date',
				      formatOptions: {
					      style : 'long'
				      } 
            }"/>
				</l:VerticalLayout>
			</l:HorizontalLayout>
		</semantic:headerContent>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:shareInJamAction>
			<semantic:ShareInJamAction id="shareInJam" visible="{FLP>/isShareInJamActive}" press=".onShareInJamPress"/>
		</semantic:shareInJamAction>

		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton id ="shareTile" title="{objectView>/saveAsTileTitle}"/>
		</semantic:saveAsTileAction>

	</semantic:SemanticPage>

</mvc:View>